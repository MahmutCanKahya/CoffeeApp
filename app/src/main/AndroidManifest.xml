<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="mahmutcankahya.com.caffeeapp">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.VIBRATE"></uses-permission>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/app_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/app_icon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity" android:theme="@style/Theme.AppCompat.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".QrCodeActivity" android:theme="@style/Theme.AppCompat.NoActionBar"></activity>
        <activity android:name=".SingUpActivity" android:theme="@style/Theme.AppCompat.NoActionBar"></activity>
        <activity android:name=".QrBeginActivity" android:theme="@style/Theme.AppCompat.NoActionBar"></activity>
        <activity android:name=".MenuActivity" android:theme="@style/Theme.AppCompat.NoActionBar"></activity>
        <activity android:name=".BuyViewActivity" android:theme="@style/AppTheme.CustomTheme"></activity>
        <activity android:name=".BasketActivity" android:theme="@style/Theme.AppCompat.NoActionBar"></activity>
    </application>

</manifest>